<Application x:Class="Calculator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Calculator"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="numbersColorBack" Color="LightCyan"/>
        <SolidColorBrush x:Key="operatorsColor" Color="LightBlue"/>

        <Style TargetType="Button" x:Key="buttonCommon">
            <Setter Property="Foreground" Value="#202020"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="3"/>
        </Style>

        <Style TargetType="Button" x:Key="numButtonStyle" BasedOn="{StaticResource buttonCommon}">
            <Setter Property="Background" Value="{StaticResource numbersColorBack}"/>
        </Style>

        <Style TargetType="Button" x:Key="operatorButtonStyle" BasedOn="{StaticResource buttonCommon}">
            <Setter Property="Background" Value="{StaticResource operatorsColor}"/>
        </Style>


    </Application.Resources>
</Application>
